---
import LandingHeader from "../components/LandingHeader.astro";
import Section from "../components/Section.astro";
import Layout from "../layouts/Layout.astro";
---

<style>
  .appear-footer {
    opacity: 1;
  }
</style>

<Layout title="Welcome to Tesla Clone.">
  <LandingHeader />
  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll"
  >
    <div class="snap-center">
      <Section
        title="Experience Nikola"
        subtitle="Schedule a Demo Drive Today"
        color="white"
      >
        <video
          slot="background"
          class="object-center object-cover h-full w-full md:block sm:hidden"
          autoplay
          muted
          loop
          src="/desktop/video.webm"></video>
        <video
          slot="background"
          class="object-center object-cover h-full w-full sm:block md:hidden"
          autoplay
          muted
          loop
          src="/mobile/mobile-video.webm"></video>
        <div slot="footer">
          <a
            class="border-[3px] border-white bg-white/5 backdrop-blur-sm text-sm rounded font-medium text-white px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors"
            href="">Demo Drive</a
          >
        </div>
      </Section>
    </div>
    <div class="snap-center">
      <Section
        title="Model Y"
        subtitle="Starting at $40,240"
        secSubtitle="After Federal Tax Credit"
        color="black"
      >
        <img
          slot="background"
          src="/mobile/mobile-model-y.jpg"
          alt=""
          class="h-full w-full object-cover object-center sm:block md:hidden"
        />
        <img
          slot="background"
          src="/desktop/model-y.webp"
          alt=""
          class="h-full w-full object-cover object-center md:block sm:hidden"
        />
        <div
          slot="footer"
          class="flex flex-col md:flex-row gap-x-6 mx-6 md:mx-auto"
        >
          <a
            class="bg-white text-black text-sm rounded font-medium px-12 py-3 inline-block hover:bg-black hover:text-white transition-colors mb-4 md:mb-0"
            href="">Explore Invasdentory</a
          >
          <a
            class="bg-gray-900/50 text-white text-sm rounded font-medium text-white px-12 py-3 inline-block hover:bg-black hover:text-white transition-colors mb-4 md:mb-0"
            href="">Custom Order</a
          >
        </div>
      </Section>
    </div>
    <div class="snap-center">
      <Section
        title="Model S"
        subtitle="Explore Inventory"
        underline="true"
        color="black"
      >
        <img
          slot="background"
          src="/mobile/mobile-model-s.webp"
          alt=""
          class="h-full w-full object-cover object-center sm:block md:hidden"
        />
        <img
          slot="background"
          src="/desktop/model-s.webp"
          alt=""
          class="h-full w-full object-cover object-center md:block sm:hidden"
        />
        <div
          slot="footer"
          class="flex flex-col md:flex-row gap-x-6 mx-6 md:mx-auto"
        >
          <a
            class="bg-white text-black text-sm rounded font-medium px-12 py-3 inline-block hover:bg-black hover:text-white transition-colors mb-4 md:mb-0"
            href="">Custom Order</a
          >
          <a
            class="bg-gray-900/50 text-white text-sm rounded font-medium text-white px-12 py-3 inline-block hover:bg-black hover:text-white transition-colors mb-4 md:mb-0"
            href="">Demo Drive</a
          >
        </div>
      </Section>
    </div>
    <div class="snap-center">
      <Section
        title="Model X"
        subtitle="Explore Inventory"
        underline="true"
        color="black"
      >
        <img
          slot="background"
          src="/mobile/mobile-model-x.webp"
          alt=""
          class="h-full w-full object-cover object-center sm:block md:hidden"
        />
        <img
          slot="background"
          src="/desktop/model-x.jpg"
          alt=""
